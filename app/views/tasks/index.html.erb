<p id="notice"><%= notice %></p>

<h1>タスク一覧画面</h1>


<%= form_with(url: tasks_path, method: :get, local: true) do |form| %>
  <%= form.label :タスク名 %>
  <%= form.search_field :title %>
  <%= form.label :ステータス %>
  <%= form.search_field :status %>
  <%= form.submit '検索' %>
  
<% end %>

<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class= "task_row">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.expired_at %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規タスク登録', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
